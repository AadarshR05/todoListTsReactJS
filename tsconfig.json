{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom", // to use local storage in the browser
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // has to check the type strictly
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // interpret to ts, without storing js
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
